            link.addEventListener('click', function() {
                nav.classList.remove('active');
            });
        });

        // Recherche dynamique
        const searchInput = document.getElementById('searchInput');
        const searchResults = document.getElementById('searchResults');

        // DonnÃ©es de recherche (remplacer par API rÃ©elle)
        const searchData = [
            { title: 'Ãquipe Senior', url: '/Equipes/Senior' },
            { title: 'Ãquipe Junior', url: '/Equipes/Junior' },
            { title: 'Joueur: Amadou Diallo', url: '/Joueurs/1' },
